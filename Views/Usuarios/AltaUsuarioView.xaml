<Window x:Class="MedicalAppointments.Views.Usuarios.AltaUsuarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo usuario" Height="480" Width="580"
        WindowStartupLocation="CenterScreen">	
	<Grid Margin="15,23,10,15" Background="#FFF5F5F5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Contenido principal -->
		<StackPanel Grid.Column="0">
			<TextBlock Text="Nuevo usuario" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" Foreground="#FF333333"/>

			<!-- Sección Credenciales -->
			<StackPanel Margin="0,0,0,15">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0">
						<Label Content="Usuario" FontWeight="Bold" Foreground="#FF333333"/>
						<TextBox Name="txtUsuario" Background="White" BorderBrush="#FFCCCCCC"/>
					</StackPanel>

					<StackPanel Grid.Column="2">
						<Label Content="Contraseña" FontWeight="Bold" Foreground="#FF333333"/>
						<PasswordBox Name="txtContrasena" Background="White" BorderBrush="#FFCCCCCC"/>
					</StackPanel>
				</Grid>
			</StackPanel>

			<!-- Información personal -->
			<StackPanel Margin="0,0,0,15">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0">
						<Label Content="Nombre" FontWeight="Bold" Foreground="#FF333333"/>
						<TextBox Name="txtNombre" Background="White" BorderBrush="#FFCCCCCC"/>

						<Label Content="Dni" FontWeight="Bold" Margin="0,10,0,0" Foreground="#FF333333"/>
						<TextBox Name="txtDni" Background="White" BorderBrush="#FFCCCCCC"/>
					</StackPanel>

					<StackPanel Grid.Column="2">
						<Label Content="Apellidos" FontWeight="Bold" Foreground="#FF333333"/>
						<TextBox Name="txtApellidos" Background="White" BorderBrush="#FFCCCCCC"/>
					</StackPanel>
				</Grid>
			</StackPanel>

			<!-- Sección de Contacto -->
			<StackPanel Margin="0,0,0,15">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<!-- Email -->
					<StackPanel Grid.Column="0">
						<Label Content="Email" FontWeight="Bold" Foreground="#FF333333"/>
						<TextBox Name="txtEmail" Background="White" BorderBrush="#FFCCCCCC"/>
					</StackPanel>

					<!-- Teléfono -->
					<StackPanel Grid.Column="2">
						<Label Content="Teléfono" FontWeight="Bold" Foreground="#FF333333"/>
						<TextBox Name="txtTelefono" Background="White" BorderBrush="#FFCCCCCC"/>
					</StackPanel>
				</Grid>
			</StackPanel>

			<!-- Sección Rol y Especialidad -->
			<StackPanel Margin="0,0,0,15">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="10"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0">
						<Label Content="Rol" FontWeight="Bold" Foreground="#FF333333"/>
						<ComboBox Name="cbRol" DisplayMemberPath="Nombre" SelectedValuePath="Id" Margin="0,0,0,10"/>
					</StackPanel>

					<StackPanel Grid.Column="2">
						<Label Content="Especialidad" FontWeight="Bold" Foreground="#FF333333"/>
						<ComboBox Name="cbEspec" DisplayMemberPath="Nombre" SelectedValuePath="Id"/>
					</StackPanel>
				</Grid>
			</StackPanel>

			<!-- Checkbox Usuario Activo -->
			<CheckBox Name="chkActivo" Content="Usuario activo" FontWeight="Bold" Margin="0,0,0,20"
                     Foreground="#FF333333" IsChecked="True"/>

			<!-- Botones -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
				<Button Content="Cancelar" Width="100" Margin="0,0,10,0"
                        Background="#FFE0E0E0" Foreground="#FF333333" Click="Cancelar_Click"/>
				<Button Content="Crear usuario" Width="120"
                        Background="#2C3E50" Foreground="White" Click="CrearUsuario_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>